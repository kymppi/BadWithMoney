---
import LoginButton from '../components/LoginButton.astro';
import Layout from '../layouts/Layout.astro';
import { getUser } from '../lib/get-user';

const user = await getUser(Astro.request.headers.get('cookie'));
---

<Layout
  user={user}
  path={[
    { label: 'Budgets', link: '/budgets' },
    { label: 'Test', link: '/insert-uuid-here' },
    {
      label: 'Transactions',
      link: '/transactions',
    },
  ]}
>
  <LoginButton />
</Layout>
