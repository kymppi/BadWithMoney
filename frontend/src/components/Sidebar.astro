---
import { Icon } from 'astro-icon';

export interface Link {
  label: string;
  link: string;
  icon: string;
}

export interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<nav class="ga-sidebar h-full border-r-2 border-solid border-black">
  <div class="flex flex-col justify-center items-center h-full">
    {
      links.map((link, index) => (
        <a
          href={link.link}
          class={`w-full px-4 flex items-center hover:bg-gray-300 border-t-2 border-solid border-black ${
            links.length === index + 1 ? 'border-b-2' : ''
          }`}
        >
          <div class="w-12">
            <Icon name={link.icon} />
          </div>
          <p class="text-md m-2 grow">{link.label}</p>
        </a>
      ))
    }
  </div>
</nav>
