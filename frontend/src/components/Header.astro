---
import { Icon } from 'astro-icon';
import type { Path } from '../lib/types';
import Breadcrumbs from './Breadcrumbs.astro';
import UserInfo from './UserInfo.svelte';

export interface Props {
  path: Path[];
}

const { path } = Astro.props;
---

<header
  class="ga-header flex items-center p-4 font-semibold text-lg gap-2 text-gray-900 justify-between border-b-2 border-solid border-black"
>
  <Breadcrumbs items={path} separator=" / " />
  <!-- <UserInfo client:load><LoginButton /></UserInfo> -->
  <UserInfo client:load>
    <Icon slot="icon" name="carbon:logout" class="w-6" />
  </UserInfo>
</header>
